{% trans_default_domain 'sfs_user' %}
{% for administrator in entities %}
    <tr>
        {% if sfs_user_is_name_surname() %}
            <td>{{ administrator.name }}</td>
            <td>{{ administrator.surname }}</td>
        {% endif %}
        <td>{{ administrator.username }}</td>
        {% if sfs_user_is_emailed() %}
            <td>{{ administrator.email }}</td>
        {% endif %}
        <td>{{ administrator.lastLogin ? administrator.lastLogin|date('H:i d-m-Y') : 'not yet' }}</td>
        <td>{{ administrator.roles|join(', ') }}</td>
        <td>
            <a class="text-nowrap" href="{{ url('sfs_user_admin_administrators_details', {'administrator': administrator}) }}">details <span class="mdi mdi-18px mdi-eye-outline align-middle"></span></a>
        </td>
    </tr>
{% endfor %}