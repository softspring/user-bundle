{% trans_default_domain 'sfs_user' %}
{% extends '@SfsUser/admin_layout.html.twig' %}

{% block content %}
    <h2>{{ user.name }} {{ user.surname }}</h2>

    <div class="text-right">
        <a href="#" class="btn btn-outline-secondary">Promote Admin</a>
        <a href="#" class="btn btn-outline-secondary">Edit</a>
        <a href="#" class="btn btn-outline-secondary">Reset password</a>
        <a href="#" class="btn btn-outline-secondary">Manual password</a>
        <a href="#" class="btn btn-outline-secondary">Delete</a>
    </div>

    <p><strong>name:</strong> {{ user.name }}</p>
    <p><strong>surname:</strong> {{ user.surname }}</p>
    <p><strong>username:</strong> {{ user.username }}</p>
    <p><strong>email:</strong> {{ user.email }}</p>
    <p><strong>lastLogin:</strong> {{ user.lastLogin ? user.lastLogin|date('H:i d-m-Y') : 'not yet' }}</p>
    <p><strong>role:</strong> {{ user.roles|join(', ') }}</p>

