{% trans_default_domain 'sfs_user' %}

{% block subject %}
{%- autoescape false -%}
{{ 'invite.accept.email.subject'|trans({'%username%': user_username, '%name%': user_name, '%surname%': user_surname, '%email%': user_email}) }}
{%- endautoescape -%}
{% endblock %}

{% block text %}
{% autoescape false %}
{{ 'invite.accept.email.message'|trans({'%username%': user_username, '%name%': user_name, '%surname%': user_surname, '%email%': user_email, '%acceptUrl%': acceptUrl}) }}
{% endautoescape %}
{% endblock %}

{% block html %}
{% autoescape false %}
<!DOCTYPE html>
<html lang="es">
<head>
    <title>https://pvet.qpv.es/</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="https://fonts.googleapis.com/css?family=Roboto:200,400,700" rel="stylesheet">
</head>
<body leftmargin="0" marginwidth="0" topmargin="0" marginheight="0" offset="0"  bgcolor="#f2f2f2" width="100%" style="padding-top:20px;">

<table width="640" cellspacing="0" cellpadding="0" border="0" align="center" style="max-width:640px; width:100%;" bgcolor="#f2f2f2">
    <tr>
        <td align="center" valign="top" style="padding: 20px;">
            <center>
                <table bgcolor="#ffffff" cellspacing="0" cellpadding="0" width="600" style="max-width:600px; width:100%; padding:0 0 34px 0; margin-left:auto; margin-right:auto; font-family:'Roboto','Arial','Helvetica'; font-weight:400; color:#4d4d4f; border-radius: 2px;">
                    <!-- Content mail -->

                    <tr>
                        <!-- Title -->
                        <td style="font-size:16px; line-height:25px;  padding-right: 30px; padding-left: 30px;">
                            <h1 style="color:#333;font-size: 18px; text-align: center; margin-bottom:35px; margin-top:25px; font-weight: bold; padding-right: 30px; padding-left: 30px;">
                                {{ 'invite.accept.email.subject'|trans({'%username%': user_username, '%name%': user_name, '%surname%': user_surname, '%email%': user_email}) }}
                            </h1>
                        </td>
                        <!-- /Title -->
                    </tr>
                    <tr>
                        <!-- Main -->
                        <td style="font-size:16px; line-height:25px;  padding-right: 30px; padding-left: 30px;">
                            {{ 'invite.accept.email.html'|trans({'%username%': user_username, '%name%': user_name, '%surname%': user_surname, '%email%': user_email, '%acceptUrl%': acceptUrl}) }}
                        </td>
                        <!-- /Main -->
                    </tr>
                    <!-- / Content mail -->
                </table>
                <table bgcolor="#f2f2f2" cellspacing="0" cellpadding="0" width="100%" style="max-width:600px; padding:15px 0px 20px 0px; margin:0 auto;font-family:'Roboto','Arial','Helvetica'; font-weight:300; color:#9b9b9b">
                    <!-- Content footer -->
                    <tr valign="top">
                        <td style="text-align: center;">
                            <a style="color: #404040; text-decoration: none;" href="http://app.pvet.es">ELLU<!--<img src="data:image/png;base64," width="80px" alt="ELLU" />--></a>
                        </td>
                    </tr>
                    <!-- /Content footer -->
                </table>
            </center>
        </td>
    </tr>
</table>
</body>
{% endautoescape %}
{% endblock %}
