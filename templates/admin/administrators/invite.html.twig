{% trans_default_domain 'sfs_user' %}
{% extends '@SfsUser/admin_layout.html.twig' %}

{% block breadcrums_content %}
    {{ parent() }}
    <li class="breadcrumb-item"><a href="{{ url('sfs_user_admin_administrators_list') }}">Administrators</a></li>
    <li class="breadcrumb-item active" aria-current="page">Invite new administrator</li>
{% endblock breadcrums_content %}

{% block content %}
    {{ form_start(form) }}
    {{ form_rest(form) }}
    <a href="{{ url('sfs_user_admin_administrators_list') }}" class="btn btn-outline-secondary">{{ 'admin_administrators.invite.actions.cancel.button'|trans }}</a>
    <input type="submit" value="{{ 'admin_administrators.invite.actions.invite.button'|trans }}" class="btn btn-primary" />
    {{ form_end(form) }}
{% endblock content %}