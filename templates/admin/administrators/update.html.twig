{% trans_default_domain 'sfs_user' %}
{% extends '@SfsUser/admin_layout.html.twig' %}

{% block title %}{{ 'admin_administrators.update.meta.title'|trans({'%displayName%': administrator.displayName}) }}{% endblock %}

{% block breadcrums_content %}
    {{ parent() }}
    <li class="breadcrumb-item"><a href="{{ url('sfs_user_admin_administrators_list') }}">{{ 'admin_administrators.list.breadcrumb'|trans }}</a></li>
    <li class="breadcrumb-item"><a href="{{ url('sfs_user_admin_administrators_details', {'administrator':administrator}) }}">{{ 'admin_administrators.details.breadcrumb'|trans({'%displayName%': administrator.displayName}) }}</a></li>
    <li class="breadcrumb-item active" aria-current="page">{{ 'admin_administrators.update.breadcrumb'|trans({'%displayName%': administrator.displayName}) }}</li>
{% endblock breadcrums_content %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <h1 class="h3 mb-4">{{ 'admin_administrators.update.title'|trans({'%displayName%': administrator.displayName}) }}</h1>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col bg-white p-5">
                {{ form_start(form) }}
                {{ form_rest(form) }}
                <a href="{{ url('sfs_user_admin_administrators_details', {'administrator':administrator}) }}" class="btn btn-outline-secondary">{{ 'admin_administrators.update.actions.cancel.button'|trans }}</a>
                <input type="submit" value="{{ 'admin_administrators.update.actions.update.button'|trans }}" class="btn btn-primary" />
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock content %}